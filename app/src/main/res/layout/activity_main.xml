<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zzz"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:visibility="visible"
  >

    <Button
        android:id="@+id/button_visibilitychanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_green_light"
        android:nestedScrollingEnabled="true"
        android:onClick="toDo"
        android:text="Change visiblility"
        android:textColor="#121713"
        app:backgroundTint="#96EC7E" />

    <Button
        android:id="@+id/button_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#877A32"
        android:onClick="toDo"
        android:text="toast activator"
        app:backgroundTint="#DAACAC" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_visibilitychanger"
        android:rotationX="-50"
        android:src="@mipmap/ic_launcher"
        android:visibility="visible"
        tools:src="@drawable/download"
        tools:srcCompat="@tools:sample/avatars[10]"
        tools:visibility="visible" />
    <WebView
        android:id="@+id/web1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_toast"
        >

    </WebView>
</RelativeLayout>
